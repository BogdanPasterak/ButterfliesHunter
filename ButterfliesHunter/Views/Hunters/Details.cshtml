@model ButterfliesHunter.Models.Hunter

@{
    ViewData["Title"] = "Details";
}

<h2>Details of Hunter</h2>

<div>
 

    <table class="table bg-bright col-5">
        <tr>
            <td>
                Id
            </td>
            <td>
                @Model.HunterId
            </td>
        </tr>
        <tr>
            <td>
                Name
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                Email
            </td>
            <td>
                @if (Model.Display)
                {
                    @Html.DisplayFor(model => model.Email)
                }
                else
                {
                    <span class="text-info">Inaccessible</span>
                }
            </td>
        </tr>
        <tr>
            <td>
                Voted
            </td>
            <td>
                @Html.DisplayFor(model => model.Voted)
            </td>
        </tr>
    </table>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.HunterId">Edit</a> |*@
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
    <a asp-controller="Butterflies" asp-action="Index" class="btn btn-dark">Back to Home</a>
</div>
